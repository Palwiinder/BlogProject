@model CreateCommentViewModel
@{
    ViewBag.Title = "EditComment";
}

<h2>EditComment</h2>

<form method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Body, " name:")
        @Html.TextAreaFor(p => p.Body, new { @class = "form-control", placeholder = "Leave a comment" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.ReasonOfUpdating, "Reason:")
        @Html.TextAreaFor(p => p.ReasonOfUpdating, new { id = "Body", @class = "form-control", placeholder = "Reason" })
    </div>
    
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>

</form>
