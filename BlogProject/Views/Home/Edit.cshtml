@model CreatePostViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/Create.js"></script>
}

    <form method="post" enctype="multipart/form-data">
        @Html.ValidationSummary(false)

        <div class="form-group">
            @Html.LabelFor(p => p.Title, "Post name:")
            @Html.TextAreaFor(p => p.Title, new { @class = "form-control", placeholder = "Movie name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(p => p.Body, "Post:")
            @Html.TextAreaFor(p => p.Body, new { id = "Body", @class = "form-control", placeholder = "Blog" })
        </div>
        <div class="form-group">
            <input type="file" name="Media" />
        </div>
        <div class="">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>

    </form>
